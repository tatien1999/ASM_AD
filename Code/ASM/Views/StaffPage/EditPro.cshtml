@model ASM.Models.Profile_User
@{
    ViewBag.Title = "EditPro";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<div id="content-header">
    <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="#" class="current">Edit Account</a> </div>
    <h1>Edit Account</h1>
</div>
<div class="container-fluid">
    <hr>
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-content nopadding">
                    @using (Html.BeginForm("EditPro", "StaffPage", "trainer", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="control-group">
                            <label class="control-label">UserID</label>
                            <div class="controls" style="font-size : 20px; font-weight : bold">
                                @Html.HiddenFor(x => x.UserID)
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label">Full Name</label>
                            <div class="controls">
                                @Html.EditorFor(x => x.Full_Name)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Address</label>
                            <div class="controls">
                                @Html.EditorFor(x => x.Address)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Phone</label>
                            <div class="controls">
                                @Html.EditorFor(x => x.Phone)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Date of Birth</label>
                            <div class="controls">
                                @Html.EditorFor(x => x.DateOfBirth)
                            </div>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

